<p class="errors" style="text-align: center; margin-bottom: 1em;"></p>

<form class="fos_user_login" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username">Email</label>
    <input type="email" id="username" name="_username" required="required" />

    <label for="password">Mot de passe</label>
    <input type="password" id="password" name="_password" required="required" />
    <div class="col s12 l12 center">
        <input class="btn waves-effect black white-text" type="submit" id="_submit" name="_submit" value="Se connecter" />
    </div>
</form>
