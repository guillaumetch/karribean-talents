{% extends 'back/dashboard.html.twig' %}
{% block title %}
    Editer la présentation
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {% block menu %}
        {{ parent() }}
    {% endblock %}
    {% block content %}
        <main>
            <div class="row container">
                <div class="col l12">
                    <h1 class="center-align">Editer la présentation</h1>
                    {{ form_start(form, {'method': 'post', 'action': path('edit_presentation'), 'attr': {'class': 'col l12 form'}}) }}
                    {{ form_label(form.content,"Contenu :") }}
                    {{ form_widget(form.content) }}
                    <input class="btn waves-effect black" type="submit" value="Enregistrer">
                    {{ form_end(form) }}
                </div>
            </div>
        </main>
    {% endblock %}
{% endblock %}
{% block lib_javascripts %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
    <script>
        tinymce.init({ selector:'textarea',forced_root_block : false,statusbar : false , height : "480"});



    </script>
    {#{{ tinymce_init({
        statusbar : false , selector: "textarea.tinymce"}) }}#}
{% endblock %}